<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <TextView
        android:id="@+id/question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/multiply_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/question_txt"
        android:visibility="gone">
        <Button
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:background="@drawable/btn_background"
            android:text="ue"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/fillColor"
            android:text="ue"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/colorAccent"
            android:text="ue"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/colorPrimary"
            android:text="ue"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/boolean_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/question_txt">
        <Button
            android:id="@+id/boolean_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/colorAccent"
            android:text="True"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/boolean_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/colorPrimary"
            android:text="False"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="18sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>